{
    "builders": [
        {
            "type": "digitalocean",
            "image": "coreos-stable",
            "region": "nyc1",
            "size": "512mb",
            "snapshot_name": "devops-03",
            "ssh_username": "core"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "git clone https://github.com/sebastiandelaroche/devops.git",
                "cd devops",
                "docker build -t devops .",
                "docker run -d -p 3000:3000 devops"
            ]
        }
    ]
}